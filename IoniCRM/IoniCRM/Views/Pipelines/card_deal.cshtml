
<li class="border-bottom border-dark mt-2 px-1 pb-3">

    <div class="row mx-2 pb-1">
        <div class="col p-0">

            <div class="row m-0">
                <div class="col p-0">
                    <div class="text-card-title text-wrap">@ViewBag.Deal.nome</div>
                </div>

                <div class="col-1 ml-2 my-auto px-0">
                    <a class="nav-link text-secondary p-0" asp-controller="Deal" asp-action="Deal"
                       asp-route-id="@ViewBag.Deal.getId()">
