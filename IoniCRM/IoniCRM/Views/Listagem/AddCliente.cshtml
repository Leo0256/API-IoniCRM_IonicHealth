@{
    ViewData["Title"] = "Visão do Cliente";
}

<div class="container py-5">
    <div class="bg-card bg-card-dark rounded border border-dark shadow">
        <div class="row bg-card nav-dark align-items-center m-1">
            @if (ViewBag.Cliente != null)
            {
                <img title="imagem perfil" src="@ViewBag.Cliente.img" class="perfil-icon rounded-circle align-top m-2" />
                <h1 class="text-theme-dark px-3 py-3 m-0">Editar Cliente</h1>
            }
            else
            {
                <img title="imagem perfil" src="https://raw.githubusercontent.com/Leo0256/API-IoniCRM_IonicHealth/sistema/IoniCRM/IoniCRM/wwwroot/images/logo-icon-1.png"
                     class="perfil-icon rounded-circle align-top m-2" />
                <h1 class="text-theme-dark px-3 py-3 m-0">Novo Cliente</h1>
            }

        </div>

        <section>
            @using (Html.BeginForm("UpsertCliente", "Listagem", FormMethod.Post))
            {
                <!--
                <input type="hidden" name="id_deal" value="ViewBag.Deal.getId()" />
                <input type="hidden" name="id_pipe" value="ViewBag.Pipeline.GetId()" />
                -->

                <input type="hidden" name="id_cliente" value="0" />

                <div class="form-group container w-75 p-3">
                    <div class="form-row align-items-baseline">

                        <div class="form-group col-md-6">

                            <h2 class="my-1">
                                <label for="nomeTextBox" class="text-dark m-0">Nome</label>
                            </h2>

                            <input id="nomeTextBox" class="form-control rounded m-0" type="text" name="nome" placeholder="Informe um nome" value="" />

                        </div>


                        <div class="form-group col-md-6">

                            <h2 class="my-1">
                                <label for="razaoSocialTextBox" class="text-dark m-0">Razão Social / Nome Completo</label>
                            </h2>

                            <input id="razaoSocialTextBox" class="form-control rounded m-0" type="text" name="razao_social" placeholder="Informe o Nome Completo" value="" />

                        </div>

                    </div>

                    <div class="form-row align-items-baseline">

                        <div class="form-group col-md-4">
                            <h2 class="my-1">
                                <label for="empOptions" class="text-dark m-0">Empresa / Chefe</label>
                            </h2>

                            <select id="empOptions" name="emp" class="form-control">
                                <option selected>Eu mesmo</option>
                                <option>Trabalho para uma empresa</option>
                                <option>Eu tenho um chefe picareta</option>
                                <!--
                                for (int status = 0; status < ViewBag.Status.Length; status++)
                                {
                                    if (status == ViewBag.Deal.d_status)
                                    {
                                        <option selected>.Status[status]</option>
                                    }
                                    else
                                    {
                                        <option>.Status[status]</option>
                                    }
                                }
                                    -->
                            </select>
                        </div>

                        <div class="form-group col-md-4">

                            <input type="hidden" name="cpf_cnpj_antigo" value="" />
                            <h2 class="my-1">
                                <label for="cpfCnpjTextBox" class="text-dark m-0">CPF/CNPJ</label>
                            </h2>
                            <input id="cpfCnpjTextBox" class="form-control rounded" type="text" name="cpf_cnpj" placeholder="Informe o CPF / CNPJ" value="" />

                        </div>

                        <div class="form-group col-md-4">
                            <h2 class="my-1">
                                <label for="crmTextBox" class="text-dark m-0">CRM</label>
                            </h2>
                            <input id="crmTextBox" class="form-control rounded" type="text" name="crm" placeholder="(Opcional)" value="" />
                        </div>

                    </div>

                    <div class="form-row align-items-baseline">
                        
                        <div class="form-group col-md-12">

                            <h2 class="my-1">
                                <label for="endTextArea" class="text-dark m-0">Endereços</label>
                            </h2>

                            <textarea id="endTextArea" class="form-control rounded" type="text" name="enderecos" rows="2" placeholder="(Opcional)" value=""></textarea>

                        </div>

                    </div>

                    <div class="form-row align-items-baseline">
                        
                        <div class="form-group col-md-4">

                            <h2 class="my-1">
                                <label for="catTextBox" class="text-dark m-0">Categoria / Cargo</label>
                            </h2>

                            <input id="catTextBox" class="form-control rounded" type="text" name="cargo" placeholder="Informe o Cargo" value="" />
                            
                        </div>

                        <div class="form-group col-md-4">
                            
                            <h2 class="my-1">
                                <label for="webTextArea" class="text-dark m-0">Websites</label>
                            </h2>

                            <textarea id="webTextArea" class="form-control rounded" type="text" name="websites" rows="2" placeholder="(Opcional)" value=""></textarea>
                        </div>

                        <div class="form-group col-md-4">
                            <h2 class="my-1">
                                <label for="contatoTextArea" class="text-dark m-0">Contatos</label>
                            </h2>

                            <textarea id="contatoTextArea" class="form-control rounded" type="text" name="contatos" rows="2" placeholder="Telefone / E-mail" value=""></textarea>
                        </div>

                    </div>

                    <div class="form-row">

                        <div class="form-group col-md-12">
                            <h2 class="my-1">
                                <label for="descrTextArea" class="text-dark m-0">Descrição</label>
                            </h2>
                            <textarea id="descrTextArea" class="form-control rounded" type="text" name="descr" rows="5" value=""></textarea>
                        </div>

                    </div>


                    <div class="form-row align-items-center justify-content-between">
                        <button type="submit" class="btn btn-secondary rounded-pill border-dark shadow mt-3">
                            <h4 class="borda-texto m-1">Salvar</h4>
                        </button>

                        @if (1 != 0)
                        {
                            <a class="btn btn-danger rounded-pill border-dark shadow mt-3"
                               asp-controller="" asp-action="" asp-route-id="" 
                               asp-route-nome="" asp-route-pipe="">
                                <h4 class="borda-texto m-1">Deletar</h4>
                            </a>
                        }
                        </div>
                </div>
            }

        </section>

    </div>
</div>