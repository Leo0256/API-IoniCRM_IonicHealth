@foreach (var item in ViewBag.Itens as List<IoniCRM.Controllers.Objects.Cliente>)
{
    <div class="container text-justify mx-auto mb-4 p-2 bg-card bg-card-@ViewBag.tema h-100 w-auto mw-30 box-shadow">
        <div class="d-md-flex row mx-0">
            <ul class="mb-0 px-0 w-100">
                <li class="row justify-content-between mx-0">

                    <img title="@item.nome - imagem perfil" src="@item.img" class="perfil-icon rounded-circle align-top m-2" />

                    <div class="text-card-title title my-auto flex-wrap">@item.nome</div>

                    <div class="text-right m-0 p-0">
                        <a class="btn btn-info p-1 mx-1 my-1" asp-controller="Email" asp-action="Email">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="x" viewBox="0 0 16 16">
                                <path d="M2 2a2 2 0 0 0-2 2v8.01A2 2 0 0 0 2 14h5.5a.5.5 0 0 0 0-1H2a1 1 0 0 1-.966-.741l5.64-3.471L8 9.583l7-4.2V8.5a.5.5 0 0 0 1 0V4a2 2 0 0 0-2-2H2Zm3.708 6.208L1 11.105V5.383l4.708 2.825ZM1 4.217V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v.217l-7 4.2-7-4.2Z"></path>
                                <path d="M16 12.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Zm-3.5-2a.5.5 0 0 0-.5.5v1h-1a.5.5 0 0 0 0 1h1v1a.5.5 0 0 0 1 0v-1h1a.5.5 0 0 0 0-1h-1v-1a.5.5 0 0 0-.5-.5Z"></path>
                            </svg>
                        </a>
                        <br />
                        <a class="btn btn-danger p-1 mx-1 my-1" asp-controller="Listagem" asp-action="DelCliente"
                           asp-route-id="@item.GetPk_Cliente()" asp-route-nome="@item.nome" asp-route-emp="@item.GetEmp()">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16" height="20" width="20">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"></path>
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"></path>
                            </svg>
                        </a>
                    </div>
                </li>
            </ul>
        </div>

        <div class="d-md-flex row mx-0">
            <div class="d-sm-inline-flex justify-content-between">
                <ul class="nav flex-row flex-wrap">

                    <li class="mr-auto px-1 pb-3">

                        @if (string.IsNullOrEmpty(item.GetCRM()))
                        {
                            <div class="text-card-title pb-1">Razão Social: </div>
                        }
                        else
                        {
                            <div class="text-card-title pb-1">Nome Completo: </div>
                        }

                        <div class="text-card text-break flex-wrap">@item.razaoSocial</div>
                    </li>


                    @if (!string.IsNullOrEmpty(item.GetEmp()))
                    {
                        <li class="mr-auto px-1 pb-3">
                            <div class="text-card-title pb-1">Empresa/Chefe:</div>

                            <div class="text-card text-break flex-wrap">@item.GetEmp()</div>
                        </li>
                    }

                    <li class="mr-auto px-1 pb-3">
                        <div class="text-card-title pb-1">Categoria:</div>

                        <div class="text-card text-break flex-wrap">@item.categoria</div>
                    </li>

                    <li class="mr-auto px-1 pb-3">
                        <div class="text-card-title pb-1">CPF/CNPJ:</div>

                        <div class="text-card text-break flex-wrap">@item.GetCpfCnpj()</div>
                    </li>

                    @if (!string.IsNullOrEmpty(item.GetCRM()))
                    {
                        <li class="mr-auto px-1 pb-3">
                            <div class="text-card-title pb-1">CRM:</div>

                            <div class="text-card text-break flex-wrap">@item.GetCRM()</div>
                        </li>
                    }


                    @if (item.websites != null && item.websites.Length != 0)
                    {
                        <li class="mr-auto px-1 pb-3">
                            <div class="text-card-title pb-1">Websites:</div>

                            @foreach (var web in item.websites)
                            {
                                <div class="text-card text-break flex-wrap">@web</div>
                            }
                        </li>
                    }

                    @if (item.enderecos != null && item.enderecos.Length != 0)
                    {
                        <li class="mr-auto px-1 pb-3">
                            <div class="text-card-title pb-1">Endereços:</div>

                            @foreach (var end in item.enderecos)
                            {
                                <div class="text-card text-break flex-wrap">@end</div>
                            }
                        </li>
                    }

                    @if (!string.IsNullOrEmpty(item.contatos[0][0]) && item.contatos.Count > 0)
                    {
                        <li class="mr-auto px-1 pb-3">
                            <div class="text-card-title pb-1">Contatos</div>

                            @foreach (var cont in item.contatos)
                            {
                                <div class="text-card text-break flex-wrap">@cont[1]</div>
                            }
                        </li>
                    }

                    <li class="mr-auto px-1 pb-3">
                        <div class="text-card-title pb-1">Descrição:</div>

                        <div class="text-card text-break flex-wrap">@item.descr</div>
                    </li>

                </ul>
            </div>
        </div>
    </div>
}